{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declarationDir": "dist"
  },
  "include": ["src", "index.d.ts"]
}
